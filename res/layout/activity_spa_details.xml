<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="250sp"
                    android:layout_alignParentRight="true">

                       <ImageView
                           android:id="@+id/imageView_Spa_cover_photo"
                           android:layout_width="fill_parent"
                           android:layout_height="match_parent"
                           />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp" >

                    <ImageView
                        android:id="@+id/imageView_Spa_Profile_Logo"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="80dp"
                        android:padding="5dp"
                        android:src="@drawable/profile_pic_bg" />

                    <TextView
                        android:id="@+id/txt_spa_name_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView_Spa_Profile_Logo"
                        android:layout_marginBottom="25dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/imageView_Spa_Profile_Logo"
                        android:text="Aura Thai Spa"
                        android:textColor="#4e3315"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                   <!--   <RatingBar
                        android:id="@+id/spa_profile_ratings"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/txt_spa_name_profile"
                        android:layout_alignParentBottom="true"
                        android:numStars="5"
                        android:rating="3" />-->
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_spa_dec_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:padding="10sp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit,sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                android:textColor="#4e3315" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10sp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/txt_spa_addr_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:text="MDC Corporation (India) Pvt. Ltd. 3rd Floor, Deccan Avenue Building, Jangali Maharaj Road, Near PMT Bus Depot, Deccan Gymkhana, Pune â€“ 411005." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10sp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_dist" />

                <TextView
                    android:id="@+id/txt_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:textColor="#4e3315"
                     />
            </LinearLayout>

            <Button
                android:id="@+id/Btn_Add_to_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginTop="10sp"
                android:background="@drawable/button_default_bg"
                android:paddingBottom="2sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="2sp"
                android:text="Add to favourites"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>