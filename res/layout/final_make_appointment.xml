<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawer_bg"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_final_spa_name"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="Spa Name"
                    android:textColor="#4e3115"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/final_spa_name"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_background"
                    android:padding="10dp"
                    android:text="fsfsdf"
                    android:textColor="#4e3115" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="#4e3115" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_final_spa_therapy"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="Spa Therapy"
                    android:textColor="#4e3115"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/final_spa_therapy"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_background"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#4e3115" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="#4e3115" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_final_therapist"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="Therapist"
                    android:textColor="#4e3115"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/final_therapist"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_background"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#4e3115" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="#4e3115" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_final_time_for_service"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="Time for service"
                    android:textColor="#4e3115"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/final_time_for_service"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_background"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#4e3115" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="#4e3115" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_final_price"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="Price"
                    android:textColor="#4e3115"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/final_price"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_background"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#4e3115" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="#4e3115" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_final_date"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="Date"
                    android:textColor="#4e3115"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/final_date"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_background"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#4e3115" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="#4e3115" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_final_time"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="Time"
                    android:textColor="#4e3115"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/final_time"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_background"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#4e3115" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="#4e3115" />

            <Button
                android:id="@+id/Btn_Skip_Injuries_Fragment"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_default_bg"
                android:padding="5sp"
                android:text="Make an appointment"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>