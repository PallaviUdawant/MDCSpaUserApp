<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center"
    android:background="#70CCCCCC"
    android:gravity="center_vertical|center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#4e3115"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/date_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_selector" 
             android:drawSelectorOnTop="true"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center"
                android:orientation="horizontal"
                android:weightSum="9" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="107dp"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/drop_sawdow_bk" >

                            <TextView
                                android:id="@+id/t4"
                                android:layout_width="@dimen/textView_width"
                                android:layout_height="wrap_content"
                                android:padding="10sp"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="2dp"
                            android:background="#4e3115" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="39dp"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/drop_sawdow_bk" >

                            <TextView
                                android:id="@+id/t4"
                                android:layout_width="@dimen/textView_width"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center"
                                android:padding="10sp"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="2dp"
                            android:background="#4e3115" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_marginTop="0sp"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="4dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_corners" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/circle_bottom_margin"
                        android:layout_marginTop="@dimen/circle_top_margin"
                        android:background="@drawable/circle" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_corners" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/circle_bottom_margin"
                        android:layout_marginTop="@dimen/circle_top_margin"
                        android:background="@drawable/circle" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_corners" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/circle_bottom_margin"
                        android:layout_marginTop="@dimen/circle_top_margin"
                        android:background="@drawable/circle" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_corners" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/circle_bottom_margin"
                        android:layout_marginTop="@dimen/circle_top_margin"
                        android:background="@drawable/circle" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_corners" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="30dp"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:orientation="horizontal" >

                        <View
                            android:id="@+id/v1"
                            android:layout_width="26dp"
                            android:layout_height="2dp"
                            android:background="#4e3115" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/drop_sawdow_bk" >

                            <TextView
                                android:id="@+id/t1"
                                android:layout_width="@dimen/textView_width"
                                android:layout_height="wrap_content"
                                android:padding="10sp"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="42dp"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:orientation="horizontal" >

                        <View
                            android:id="@+id/v1"
                            android:layout_width="26dp"
                            android:layout_height="2dp"
                            android:layout_weight="4"
                            android:background="#4e3115" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/drop_sawdow_bk" >

                            <TextView
                                android:id="@+id/t4"
                                android:layout_width="@dimen/textView_width"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center"
                                android:padding="10sp"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>