<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_account_bg"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:padding="10sp">

                <TextView
                    android:id="@+id/txt_username_create_acc"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Raleway-Light.otf"
                    android:text="User Name"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:textColor="#4e3315"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily=" android:fontFamily=&quot;Raleway-Light.otf&quot;"
                    android:padding="10dp"
                    android:singleLine="true"
                     android:textColor="#4e3315" >

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="10sp">

                <TextView
                    android:id="@+id/txt_pass_create_acc"
                    android:layout_width="180dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Raleway-Light.otf"
                    android:text="Password" android:textSize="18sp"
                    android:textColor="#4e3315" />

                <EditText
                    android:id="@+id/Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                     android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily=" android:fontFamily=&quot;Raleway-Light.otf&quot;"
                    android:textColor="#4e3315"
                    android:padding="10dp"
                    android:password="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="10sp">

                <TextView
                    android:id="@+id/txt_confirm_create_acc"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:fontFamily="Raleway-Light.otf"
                    android:text="Confirm Password"
                    android:textColor="#4e3315"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/Password_Conform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily=" android:fontFamily=&quot;Raleway-Light.otf&quot;"
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                    android:password="true"
                     android:textColor="#4e3315"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="10sp">

                <TextView
                    android:id="@+id/txt_full_name_create_acc"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Raleway-Light.otf"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:text="Full Name" android:textSize="18sp"
                    android:textColor="#4e3315" />

                <EditText
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily=" android:fontFamily=&quot;Raleway-Light.otf&quot;"
                    android:imeOptions="actionNext"
                    android:padding="10dp"
                     android:textColor="#4e3315"
                    android:singleLine="true" >

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textColor="#4e3315" android:padding="10sp">

                <TextView
                    android:id="@+id/txt_contact_num_create_acc"
                    android:layout_width="180dp"
                    android:layout_height="53dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:fontFamily="Raleway-Light.otf"
                    android:text="Contact Number"
                    android:textColor="#4e3315"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/Mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily=" android:fontFamily=&quot;Raleway-Light.otf&quot;"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="#4e3315"
                    android:textColorHint="#bbbbbb" >

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="10sp">

                <TextView
                    android:id="@+id/txt_email_create_acc"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Raleway-Light.otf"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:text="Email" android:textSize="18sp"
                    android:textColor="#4e3315" />

                <EditText
                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily=" android:fontFamily=&quot;Raleway-Light.otf&quot;"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                     android:textColor="#4e3315"
                    android:singleLine="true" >

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="10sp">

                <TextView
                    android:id="@+id/txt_addr__create_acc"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:fontFamily="Raleway-Light.otf"
                    android:text="Address" 
                    android:textSize="18sp"
                    android:textColor="#4e3315" />

                <EditText
                    android:id="@+id/Address"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily=" android:fontFamily=&quot;Raleway-Light.otf&quot;"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"
                     android:textColor="#4e3315"
                    android:padding="10dp"  android:layout_marginRight="10dp"
                    android:singleLine="true"
                     >

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="10sp">

                <TextView
                    android:id="@+id/txt_dob_create_acc"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:fontFamily="Raleway-Light.otf"
                    android:text="Date Of Birth"
                    android:textColor="#4e3315"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/DOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily=" android:fontFamily=&quot;Raleway-Light.otf&quot;"
                    android:imeOptions="actionNext"
                    android:inputType="date"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="#4e3315" >

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textColor="#4e3315" 
                android:padding="10sp">

                <TextView
                    android:id="@+id/txt_anniversary_create_acc"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Raleway-Light.otf" 
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:textSize="18sp"
                    android:text="Anniversary" />

                <EditText
                    android:id="@+id/Anniversary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="Raleway-Light.otf"
                    android:imeOptions="actionGo"
                    android:inputType="date"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="#4e3315" >

                </EditText>
            </LinearLayout>
            <Button
                android:id="@+id/Sign_Up"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|center_vertical"
                android:background="@drawable/button_default_bg"
                android:fontFamily="Raleway-Light.otf"
                android:text="Sign Up"
                android:textColor="#ffffff" />

             <TextView
        android:id="@+id/txt_alreadyHaveAccount"
        android:layout_gravity="center|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
         android:layout_margin="20dp"
         android:fontFamily="Raleway-Light.otf"
         
        android:text="Already Have Account"  android:textColor="@drawable/textview_selector"/>
            
            <!--  <Button
                android:id="@+id/AlreadyHaveAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_default_bg"
                android:text="Already Have Account"
                android:textColor="#ffffff" />
                -->
        </LinearLayout>
    </ScrollView>

   
</RelativeLayout>